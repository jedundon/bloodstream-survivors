{
  "name": "bloodstream-survivors",
  "version": "1.0.0",
  "description": "A top-down arena survival game where you play as a white blood cell defending against viral invaders",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "optimize-images": "imagemin assets/sprites/*.png --out-dir=assets/sprites/optimized",
    "validate-data": "ajv validate -s schemas/weapons.schema.json -d assets/data/weapons.json"
  },
  "dependencies": {
    "phaser": "^3.70.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "imagemin": "^8.0.1",
    "imagemin-pngquant": "^10.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "ajv-cli": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/bloodstream-survivors.git"
  },
  "keywords": [
    "game",
    "phaser3",
    "typescript",
    "survival",
    "arena-shooter"
  ],
  "author": "Your Name",
  "license": "MIT"
}